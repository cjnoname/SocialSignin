{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react",
    "experimentalDecorators": true,
    "sourceMap": true,
    "skipDefaultLibCheck": true,
    "strict": true,
    "lib": [
      "es2018",
      "dom"
    ],
    "types": [
      "webpack-env"
    ],
    "paths": {
      "models/*": [
        "src/models/*"
      ],
      "enums/*": [
        "src/enums/*"
      ],
      "utils/*": [
        "src/utils/*"
      ],
      "UI/*": [
        "src/UI/*"
      ],
      "shared/*": [
        "src/shared/*"
      ],
      "store": [
        "src/store"
      ]
    }
  },
  "exclude": [
    "bin",
    "node_modules"
  ]
}